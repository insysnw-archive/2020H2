        }
      }
    },
    "/topics/{topicId}": {
      "get": {
        "summary": "get a topic",
        "operationId": "getTopic",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "numeric id of the topic to get",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Topic"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "moderators"
        ],
        "summary": "update a topic",
        "description": "Use this to update topic name or to open/close voting\n",
        "operationId": "updateTopic",
        "parameters": [
          {
            "name": "topicId",
