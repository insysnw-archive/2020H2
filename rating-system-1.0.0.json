            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RatingItem"
                  }
                }
              }
            }
          },
          "400": {
            "description": "invalid input, object invalid"
          }
        }
