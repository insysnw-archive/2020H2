              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "topic updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Topic"
                }
              }
            }
          },
          "400": {
            "description": "invalid input, object invalid"
          }
        }
      },
