  "components": {
    "schemas": {
      "Topic": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string",
            "example": "To be or not to be?"
          },
          "opened": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "closed": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "maxOptions": {
            "type": "integer"
          },
          "options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RatingItem"
            }
          }
        }
      },
      "TopicRequest": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "To be or not to be?"
          },
          "maxOptions": {
            "type": "integer",
            "example": 10
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RatingItemRequest"
            }
          }
        }
      },
      "TopicUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "To be or not to be?"
          },
          "maxOptions": {
            "type": "integer"
          },
          "open": {
            "type": "boolean"
          },
          "close": {
            "type": "boolean"
          }
        }
      },
      "RatingItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string",
            "example": "That is the question"
          },
          "votes_abs": {
            "type": "integer",
            "format": "int64"
          },
          "votes_rel": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "RatingItemRequest": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "That is the question"
          }
        }
      }
    }
  }
