    "/topics/{topicId}/votes/{optionId}": {
      "post": {
        "tags": [
          "authorized"
        ],
        "summary": "vote for an option",
        "operationId": "addVote",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "numeric id of the topic",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
