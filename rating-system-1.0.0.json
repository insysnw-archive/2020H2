      "post": {
        "tags": [
          "moderators"
        ],
        "summary": "add topic options",
        "operationId": "addOptions",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "numeric id of the topic to add options to",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
