        ],
        "summary": "delete an option",
        "operationId": "deleteOption",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "numeric id of the topic to delete an option from",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "optionId",
            "in": "path",
            "description": "numeric id of the option to delete",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
