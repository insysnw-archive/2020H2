    "/topics/{topicId}/options/{optionId}": {
      "get": {
        "summary": "get a topic option",
        "operationId": "getOption",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "numeric id of the topic to get",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "optionId",
            "in": "path",
            "description": "numeric id of the option to get",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
